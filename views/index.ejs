
<!-- include header -->
    <%- include('include/_header') %>
<!-- /include header -->


    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add-user" class="border-shadow boxbtn">
                    <span class="text-gradient">New Product <i class="fas fa-plus"></i></span>
                </a>
            </div>

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Product name</th>
                            <th>Type</th>
                            <th>Seller Name</th>
                            <th>Seller Address</th>
                            <th>Description</th>
                            <th>Colors</th>
                            <th>Price</th>
                            <th>Dimensions</th>
                            <th>Warranty</th>
                            <th>Weight</th>
                            <th>Model Number</th>
                            <th>Connection Type</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>



