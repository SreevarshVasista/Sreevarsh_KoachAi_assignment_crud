 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Product Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Product name">
        </div>
        <div class="form-group">
            <label for="type" class="text-light">Type</label>
            <input type="text" name="type" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="sname" class="text-light">Seller Name</label>
            <input type="text" name="sname" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="saddr" class="text-light">Seller Address</label>
            <input type="text" name="saddr" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="desc" class="text-light">Descriptions</label>
            <input type="text" name="desc" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="colors" class="text-light">Colors</label>
            <input type="text" name="colors" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="price" class="text-light">Price</label>
            <input type="text" name="price" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="dimensions" class="text-light">Dimensions</label>
            <input type="text" name="dimensions" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="warranty" class="text-light">Warranty Period</label>
            <input type="text" name="warranty" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="weight" class="text-light">Weight</label>
            <input type="text" name="weight" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="model" class="text-light">Model Number</label>
            <input type="text" name="model" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="connection" class="text-light">Connection Type</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="connection" value="wireless" >
                <label for="radio-2" class="radio-label">Wireless</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="connection" value="wired" >
                <label for="radio-3" class="radio-label">Wired</label>
            </div>
        </div>


        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>